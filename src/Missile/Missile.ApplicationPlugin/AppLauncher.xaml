<core:Launcher x:Class="Missile.ApplicationPlugin.AppLauncher"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="clr-namespace:Missile.ApplicationPlugin"
               xmlns:core="clr-namespace:Missile.Core;assembly=Missile.Core"
               d:DataContext="{d:DesignInstance local:AppLauncherViewModel}"
               mc:Ignorable="d"
               d:DesignHeight="300" d:DesignWidth="300"
               Loaded="AppLauncher_OnLoaded">
    <DockPanel>
        <TextBox DockPanel.Dock="Top" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <ListBox ItemsSource="{Binding Applications}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                d:DataContext="{d:DesignInstance local:RegisteredApplicationViewModel}"
                                Visibility="{Binding Visibility}">
                        <Label Content="{Binding ApplicationName}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</core:Launcher>