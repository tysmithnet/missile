<core:Launcher x:Class="Missile.TextLauncher.TextLauncherImplementation"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:local="clr-namespace:Missile.TextLauncher"
               xmlns:core="clr-namespace:Missile.Core;assembly=Missile.Core"
               mc:Ignorable="d"
               d:DesignHeight="300" d:DesignWidth="300"
               LayoutUpdated="TextLauncherImplementation_OnLayoutUpdated" d:DataContext="{d:DesignData Source}">
    <DockPanel>
        <TextBox x:Name="InputTextBox" DockPanel.Dock="Top" Height="30" VerticalContentAlignment="Center"
                 KeyDown="Input_OnKeyDown" AutomationProperties.AutomationId="Missile.TextLauncher.TextLauncherImplementation.InputTextBox" />
        <StackPanel x:Name="OutputPanel" AutomationProperties.AutomationId="Missile.TextLauncher.TextLauncherImplementation.OutputPanel" />
    </DockPanel>

</core:Launcher>